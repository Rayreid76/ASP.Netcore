@{
    ViewData["Title"] = "Home Page";
}
@model Users

<div class="container">
    <div class="text-center">
        <h2>Enter your Information</h2>
    </div>
</div>
<div class="container">
    <form asp-action="create" asp-controller="Home" method="POST">
        <div class="form-group">
            <span asp-validation-for="FName"></span>
            <label> First Name</label>
            <input asp-for="FName" class="form-control" placeholder="Add First Name">
        </div>

        <div class="form-group">
            <span asp-validation-for="LName"></span>
            <label>Last Name</label>
            <input asp-for="LName" class="form-control" placeholder="Add Last Name">
        </div>

        <div class="form-group">
            <span asp-validation-for="UserAge"></span>
            <label>Age</label>
            <input asp-for="UserAge" class="form-control" placeholder="Add Age">
        </div>

        <div class="form-group">
            <span asp-validation-for="UserEmail"></span>
            <label>Email</label>
            <input asp-for="UserEmail" class="form-control" placeholder="Add Email">
        </div>

        <div class="form-group">
            <span asp-validation-for="UserPassword"></span>
            <label>Password</label>
            <input asp-for="UserPassword" class="form-control" placeholder="Add Password">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
